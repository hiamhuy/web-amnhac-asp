@model IEnumerable<WebQuanLyAN.Models.Theloai>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/GUI.cshtml";
}
<h2 class="text" style="text-align:center">Danh sách thể loại</h2>
    <div class="wrap-right">
            <div class="fill-one">
                <a href="/TheLoai/them">
                <span class="icon" title="Thêm mới thể loại"><ion-icon name="add-circle-outline"></ion-icon></span>
                </a>
            </div>
    </div>

@if (TempData["ThongBao"] != null)
{
    <script language="javascript">
       alert("@TempData["ThongBao"]");
    </script>
}

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>Thể Loại</th>
                <th>Mô Tả</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.data)
            {
                <tr>
                    <td>@item.tenTL</td>
                    <td>@item.mota</td>
                    <td>
                        <div class="icon-content">
                            <a href="/TheLoai/sua/@item.Id">
                               <span class="icon" title="Sửa"><ion-icon name="create-outline"></ion-icon></span> </a>
                            <a href="/TheLoai/xoa/@item.Id">
                                <span class="icon" title="Xóa"><ion-icon name="trash-outline"></ion-icon></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
    </table>
</div>

